<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceX" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/SecondaryColorVariant</item>
        <item name="android:statusBarColor">@color/PrimaryColorVariant</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorSecondary">@color/SecondaryColor</item>
        <item name="colorSecondaryVariant">@color/SecondaryColorVariant</item>
        <item name="colorOnSecondary">@color/PrimaryColorVariant</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>
    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/PrimaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

</resources>